.main_chat__message-list__message
  .main_chat__message-list__message__user-name
    .main_chat__message-list__message__user-name__talker
      = message.user.name
    .main_chat__message-list__message__user-name__date
      =message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__message-list__message__message-text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class:'lower-message__image' if message.image.present?
